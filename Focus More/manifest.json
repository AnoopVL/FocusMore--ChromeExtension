{
  "manifest_version": 3,
  "name": "Focus More",
  "version": "1.0",
  "description": "Block distracting websites and help you focus more.",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "host_permissions": [
    "*://*.x.com/*",
    "*://*.instagram.com/*",
    "*://*.linkedin.com/*"
  ]
}
